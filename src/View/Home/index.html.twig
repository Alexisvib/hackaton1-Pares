{% extends 'layout.html.twig' %}

{% block content %}

    <div class="body-home">
        <div class="container-fluid">
            <div class="row d-flex justify-content-center">
            <img class="logo mt-5" src="assets/images/logo-pares.png" alt="logo">
            </div>
            <div class="row d-flex justify-content-center mt-5">
            <h1 class="title animate__flash" id="start">PRESS START</h1>
            </div>
            <div class="row d-flex justify-content-center mt-5">
                <button class="title modal-title interaction" id="newGame" data-toggle="modal" data-target="#exampleModalCenter" type="button">NEW GAME</button>

                <!-- Modal -->
                <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content text-center">
                            <div class="modal-header d-flex justify-content-center text-center">
                                <h5 class="modal-title text-center text-modal" id="exampleModalLongTitle">Create Player</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span class='text-modal' aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <form class="d-flex flex-column align-items-center" action="/connect/inscription" method="post">
                                        <label class="d-block label-modal text-modal" for="pseudo">Enter your Username</label>
                                        <input type="text"  id="pseudo" name="pseudo" aria-describedby="pseudo">
                                        <label class="d-block label-modal mt-5 text-modal" for="password">Enter your Password</label>
                                        <input type="password" class="d-block" id="password" name="password" aria-describedby="username">
                                        <input type="submit" class="mt-5 text-center button-modal" value="Submit">
                                </form>
                            </div>
                        </div>
                    </div>
                </div>



            </div>
            <div class="row d-flex justify-content-center mt-5">
                <h1 class="title interaction" id="continue">CONTINUE</h1>
            </div>
        </div>

    </div>
{% endblock %}

{% block javascript %}
<script src="/assets/script/home.js"></script>
{% endblock %}
